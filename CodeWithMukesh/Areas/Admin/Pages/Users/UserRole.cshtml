@page
@model UserRoleModel

<div class="d-sm-flex align-items-center justify-content-between">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Caption"]</h1>
</div>

<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form  method="post" asp-page-handler="Update" asp-route-id="@Model.UserRolesViewModel.UserId" class="d-inline">
            <input asp-for="@Model.UserRolesViewModel.UserId" type="hidden" />
            <table class="table table-striped" id="userRolesTable">
                <thead>
                    <tr>
                        <th>
                            @localizer["RoleName"]
                        </th>
                        <th>
                            @localizer["Status"]
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.UserRolesViewModel.UserRoles.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.UserRolesViewModel.UserRoles[i].RoleName" type="hidden" />
                                @Model.UserRolesViewModel.UserRoles[i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.UserRolesViewModel.UserRoles[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn bg-success">
                    <i class="fa fa-check"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#userRolesTable").DataTable();
        });
    </script>
}